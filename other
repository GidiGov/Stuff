#!/bin/bash

import schedule
import time
import datetime

def job():
    print("Running daily job...")
    # Your daily job code here

    # Check if today is Monday
    today = datetime.datetime.today().weekday()
    if today == 0:  # Monday is 0
        print("Today is Monday. Continuing indefinitely...")
        while True:
            time.sleep(1)  # Keeps the script running indefinitely

# Schedule the job every morning at 7:00 AM (or your desired time)
schedule.every().day.at("07:00").do(job)

while True:
    schedule.run_pending()
    time.sleep(1)